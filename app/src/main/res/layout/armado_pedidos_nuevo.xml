<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/linear">





    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <ImageButton
            android:layout_weight=".1"
            android:layout_gravity="left"
            android:background="@drawable/icon_back_black"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back"/>


        <com.bestdreamstore.admin_bestdream.LIBS.HTMLTextView
            android:textSize="8dip"
            android:textColor="#333333"
            android:padding="5dip"
            android:layout_gravity="right"
            android:id="@+id/datos_clienta"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>



        <ImageButton
            android:layout_marginRight="15dp"
            android:layout_weight=".1"
            android:layout_gravity="right"
            android:background="@drawable/icon_alert"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/ver_reporte"/>


        <ImageButton
            android:layout_weight=".1"
            android:layout_gravity="right"
            android:background="@drawable/ic_baseline_account_balance_24"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/add_monedero"/>



    </LinearLayout>











    /*AQUI VIENE EL RECICLERVIEW DE CARRITO*/
    /*AQUI VIENE EL RECICLERVIEW DE CARRITO*/
    /*AQUI VIENE EL RECICLERVIEW DE CARRITO*/

    <android.support.v7.widget.RecyclerView
        android:layout_margin="10px"
        android:layout_weight="4"
        android:id="@+id/content_window"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>

    /*AQUI VIENE EL RECICLERVIEW DE CARRITO*/
    /*AQUI VIENE EL RECICLERVIEW DE CARRITO*/
    /*AQUI VIENE EL RECICLERVIEW DE CARRITO*/



    <ListView

        android:layout_weight="2"
        android:id="@+id/errores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <Button
            android:layout_weight=".2"
            android:layout_gravity="left"
            android:id="@+id/procesar_pedido"
            android:textColor="@color/theme_background"
            android:text="Procesar >> "
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </LinearLayout>





</LinearLayout>


